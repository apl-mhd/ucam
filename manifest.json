{
  "name": "UCAM",
  "version": "1.0",
  "description": "Build an Extension!",
  "manifest_version": 2,
  "content_scripts": [
   {
     "matches": ["http://*.uiu.ac.bd/*","https://www.google.com/*", 
      "https://www.thedailystar.net/", "<all_urls>"],
     "js": ["content.js"]
   }
 ],

  "background":{
    "scripts" : ["background.js"]
  },

  "permissions": ["tabs"],


  "browser_action":{
    "default_icon" : "images/get_started128.png",
        "default_popup" : "popup.html",
     "default_title" : "UCAM Browser Action"   

    
  }
  
}